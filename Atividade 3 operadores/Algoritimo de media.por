programa {
  funcao inicio() {
    real nota_um, nota_dois, media_notas, soma_notas

    escreva("Digite a primeira nota: ")
    leia(nota_um)

    escreva("Digite a segunda nota: ")
    leia(nota_dois)

    soma_notas = nota_um + nota_dois

    media_notas = soma_notas / 2

    escreva("A media das notas é ", media_notas)


  }
}
